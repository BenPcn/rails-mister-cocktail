<div class="container text-center cocktail">
  <div class="col-sm-8 col-sm-offset-2">
  <h1>Ajouter une dose</h1>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.submit class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
